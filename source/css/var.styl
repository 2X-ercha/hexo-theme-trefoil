// font
$dafault-font-family = -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Helvetica Neue', Lato, Roboto, 'PingFang SC', 'Microsoft YaHei', sans-serif
$font-family = hexo-config('global_font_family')?unquote(hexo-config('global_font_family')):$dafault-font-family

// code
$code-height-limit = hexo-config('code.height_limit')?(unquote(s('%dpx',hexo-config('code.height_limit')+30))):100px